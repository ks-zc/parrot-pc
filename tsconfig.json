{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "target": "ESNext",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "alwaysStrict": true,
        "baseUrl": ".",
        "rootDir": "./",
        "outDir": "output",
        "noUnusedLocals": true,
        "allowJs": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "skipLibCheck": true,
        "paths": {
            "Src/*": [
                "./src/*"
            ],
            "Utils/*": [
                "./src/utils/*"
            ],
            "Components/*": [
                "./src/components/*"
            ],
            // "Assets/*": [
            //     "./src/assets/*"
            // ],
            "Models/*": [
                "./src/models/*"
            ],
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "types",
        ".eslintrc.js",
        "*.js",
        "./src"
    ]
}